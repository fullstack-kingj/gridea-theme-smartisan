<div class="sidebar">
  <div class="panel slidebar-module">
    <h4 class="panel-title">博主信息</h4>
    <div class="blogger-panel">
      <img class="avatar" src="<%= themeConfig.domain %>/images/avatar.png?v=<%= site.utils.now %>" alt="">
      <h5 class="author"><%- site.customConfig.author %></h5>
      <p class="description"><%- site.customConfig.description %></p>
    </div>
  </div>
  <% if (site.customConfig.is_home_adv) { %>
  <div class="panel slidebar-module">
    <h4 class="panel-title">广告推荐</h4>
    <ul class="recommend-list">
      <% for (let i = 0; i < site.customConfig.add_home_adv.length; i++) { %>
      <li>
        <a href="<%- site.customConfig.add_home_adv[i].home_adv_link %>">
          <img src="<%- site.customConfig.add_home_adv[i].home_adv_image %>"
            alt="<%- site.customConfig.add_home_adv[i].home_adv_name %>">
        </a>
      </li>
      <% } %>
    </ul>
  </div>
  <% } %>
